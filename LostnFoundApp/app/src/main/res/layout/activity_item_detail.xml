<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="16dp"
        android:text="Name: abc def"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/phone_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_text"
        android:padding="16dp"
        android:text="Phone: 0123456789"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_text"
        android:padding="16dp"
        android:text="Description: desctiption..."
        android:textSize="16sp" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_text"
        android:padding="16dp"
        android:text="Location: suburb, state"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/location_text"
        android:padding="16dp"
        android:text="Date: 01/01/2001"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/lf_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_text"
        android:padding="16dp"
        android:text="Lost/Found: Lost"
        android:textSize="16sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/remove_button"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lf_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="REMOVE" />
</RelativeLayout>
